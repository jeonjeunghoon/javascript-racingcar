{
	"plugins": [
		"prettier"
	],
  "rules": {
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 10],
    "max-params": ["error", 3],
    "no-console": "off",
		"prettier/prettier": "error"
  },
	"parserOptions": {
		"parser": "babel-eslint",
      "sourceType": "module",
    "allowImportExportEverywhere": true,
		"ecmaVersion": "latest"
	},
  "env": {
		"browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"]
}
